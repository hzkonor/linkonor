---
import buttonsData from "../data/links.json";
import Button from "./Button.astro";
---

<div class="flex flex-col space-y-4 py-4">
  {
    buttonsData.map((button) => (
      <>
        <Button color={button.color} link={button.link} icon={button.icon}>
          {button.label}
        </Button>
      </>
    ))
  }
</div>
