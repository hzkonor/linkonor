---
import { Icon } from "astro-icon/components";
interface Props {
  color?: string;
  textColor?: string;
  link: string;
  icon: string;
}

const {
  color = "black",
  textColor = "white",
  link,
  icon = "mdi:link-variant",
} = Astro.props as Props;
---

<a href={link} target="_blank">
  <button
    class="appearance-none py-2 px-4 text-white font-semibold rounded-lg shadow-md w-48 md:w-64 h-10 hover:opacity-70 flex items-center"
    style=`background-color: ${color}; color: ${textColor};`
  >
    <Icon name={icon} class="absolute text-xl" />
    <span class="mx-auto"><slot /></span>
  </button>
</a>
